<!--Caja para el contenido de registro-->
<div class="block mx-auto my-12 p-8 bg-white w-1/3 border border-black-200 rounded-lg
 shadow-lg text-black-800">
    <!--Bloque de contenido para registro-->
    <div class="form-header">
          <!--H1 registro-->
          <center><h1 class="text-3xl font-bold"><i class="fa fa-user"></i>Registrate</h1></center>
                      
         <div class="pull-right">
             <h3 class="form-title"><span class="glyphicon glyphicon-pencil"></span></h3>
         </div>

    <!--Crear formulario-->
    <form action="" method="post" class="mt-4"> 
        <!--definir nombre-->
        <label>Nombre</label>
        <!--Placeholder nombre-->
        <input type="text" name="name" placeholder="Nombre"


        class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 
        bg-gray-300 focus:bg-white" required>
        <label>Correo electrónico</label>
        <input type="email" name="email" placeholder="Email" 


        class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 
        bg-gray-300 focus:bg-white" required>
        <label>Contraseña</label>
        <input type="contraseña" name="contraseña" placeholder="Contraseña" 


        class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 
        bg-gray-300 focus:bg-white" required>
        <label>Apellidos</label>
        <input type="apPaterno" name="apPaterno" placeholder="Apellido Paterno"

        class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 
        bg-gray-300 focus:bg-white" required>
  
        <input type="apMaterno" name="apMaterno" placeholder="Apellido Materno"  

        class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 
        bg-gray-300 focus:bg-white" required>
        <label>Fecha de nacimiento</label>
        <input placeholder="Fecha de nacimiento" type="date"  name="fecha de nacimiento"


        class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 
        bg-gray-300 focus:bg-white" required>
        <label>Número de telefono</label>
        <input type="telefono" name="telefono" placeholder="Telefono"  

        class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 
        bg-gray-300 focus:bg-white" required>
        <!--Botón para ingresar-->
        <button type="submit" class="rounded-md bg-purple-500 w-full text-lg text-black 
        font-semibold p-2 my-3 hover:bg-purple-600 focus:bg-purple-700">Ingresar</button>
    
    <!--Cerrar formulario-->
    </form>
 
 <!--Cerrar div-->
 </div>


